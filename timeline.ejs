<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Timeline</title>
    <link rel="stylesheet" href="stylesheets/dashboard.css">
  </head>
  <body>
    <div class="container">
        <nav>
          <div class="logo">
            <img src="assets/logo.svg" alt="genric blog log" />
          </div>
  
          <div class="logout"><a href="/logout">Logout</a></div>
        </nav>
  
        <div class="blog-section">
          <div class="side-bar">
            <div><img src="assets/todd_chavez.jpg" alt="" class="avatar" /></div>
            <p>Todd</p>
            <p>Number of posts</p>
            <p>following</p>
          </div>
  
          <div class="main">
            <h1>Welcome <%=name%>!</h1>
            <form action="">
              <input type="text" name="blog title" />
              <textarea
                name="text"
                id=""
                cols="80"
                rows="25"
                placeholder="blog away!"
              ></textarea>
            </div>
            </form>
        </div>
      </div>
  </body>
</html>
